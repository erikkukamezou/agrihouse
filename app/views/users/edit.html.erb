<h1>アカウント更新</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>
  <%= f.label :名前 %>
  <%= f.text_field :name %>
  <%= f.label :プロフィール画像 %>
  <%= f.file_field :avatar %>
  <%= f.label :メールアドレス %>
  <%= f.email_field :email %>
  <%= f.submit "更新するよ" %>
<% end %>
<%= link_to '一覧に戻る', users_path %>
