<div class="dairy">
  <h1>観察日記</h1>

    <%= search_form_for @q do |f| %>
      <%= f.label :title, "タイトル検索" %>
      <%= f.search_field :title_cont %>

      <%= f.submit "検索" %>
    <% end %>

<div class="dairies">
  <table>
    <tr>
      <th colspan="3"></th>
    </tr>
  <% @dairies.each do |dairy| %>
    <tr>
      <td><%= dairy.title %></td>
      <td><%= dairy.content %></td>
      <td = "btn"><%= link_to '詳細', dairy_path(dairy.id) %></td>
      <% if user_signed_in? && current_user.id == dairy.user_id %>
      <td><%= link_to '編集', edit_dairy_path(dairy.id) %></td>
      <td><%= link_to '削除', dairy_path(dairy.id), method: :delete %></td>
      <% end %>

    </tr>
  <% end %>
  </table>


</div>

</div>
