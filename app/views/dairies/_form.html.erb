  <div>
<%= form_with(model: @dairy, local: true, multipart: true) do |form| %>

  <% if @dairy.errors.any? %>
    <div id="error_explanation">
      <h2><%= @dairy.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @dairy.errors.full_messages.each do |msg| %>
        <ol><%= msg %></ol>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="dairy_date">
    <%= form.label :記録日 %>
    <%= form.date_field :date, :placeholder => "日付を入力" %>
  </div>
  <div class="dairy_title">
    <%= form.label :タイトル %>
    <br>
    <br>
    <%= form.text_field :title, :placeholder => "タイトルを入力" %>
  </div>
  <br>
  <br>
  <div class="dairy_content">
    <%= form.label :内容 %>
    <br>
    <br>
    <%= form.text_field :content, :placeholder => "内容を入力" %>
  </div>
  <br>
  <br>
  <div class="dairy_image">
    <%= form.label :image %>
    <br>
    <br>
    <div class="image_field">
    <%= form.file_field :image %>
    </div>
  </div>
  <br>
  <br>
  <div class="dairy_button">
    <%= form.submit %>
  </div>

  <br>
  <br>
  <br>
  <br>
<% end %>
<br>
<br>
</div>
