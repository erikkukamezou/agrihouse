<h1>作業期間</h1>
<p>内容: <%= @event.content %></p>
<p>開始日: <%= @event.start_date %></p>
<p>終了日: <%= @event.end_date %></p>


 <% @tasks.each_with_index do |task, i| %>
<h2>本日のやること<%= i + 1 %></h2>
<p><%= task.work %></p>
<p>
  <!-- image_nameの項目を以下に変更 -->
  <strong>Image:</strong>
  
  <%= image_tag task.image.url %>
</p>
<%= link_to '編集', edit_event_path %>

<% end %>
