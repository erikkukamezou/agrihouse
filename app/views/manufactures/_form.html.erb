<%= form_with(model: @manufacture, local: true) do |form| %>

<% if @manufacture.errors.any? %>
  <div id="error_explanation">
    <h4><%= @manufacture.errors.count %>件のエラーがあります。</h4>
    <ul>
    <% @manufacture.errors.full_messages.each do |msg| %>
      <ol><%= msg %></ol>
    <% end %>
    </ul>
  </div>
<% end %>

  <div class="manufacture_date">
    <%= form.label :記録日 %>
    <%= form.date_field :date, :placeholder => "日付を入力" %>
  </div>
  <div class="manufacture_harvest">
    <%= form.label :収穫量（キロ） %>
    <%= form.number_field :harvest, :placeholder => "数値を入力" %>
  </div>
  <div class="manufacture_indoor_temperature">
    <%= form.label :ハウス内の温度 %>
    <%= form.number_field :indoor_temperature, :placeholder => "数値を入力" %>
  </div>
  <div class="manufacture_soil_temperature">
    <%= form.label :土の温度 %>
    <%= form.number_field :soil_temperature, :placeholder => "数値を入力" %>
  </div>
  <div class="manufacture_humidity">
    <%= form.label :湿度 %>
    <%= form.number_field :humidity, :placeholder => "数値を入力" %>
  </div>
  <%= form.submit %>
<% end %>
