<div class="devise">
  <h2>新規登録</h2>
    <br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :名前 %><br />
        <br>
      <%= f.text_field :name, autofocus: true, :placeholder => "名前を入力" %>
    </div>

    <div class="field">
      <%= f.label :自己紹介 %>
      <%= f.text_area :introdution, :placeholder => "自分のことについてなんでもどうぞ！" %>

    </div>

    <div class="field">
      <%= f.label :プロフィール画像 %>
      <%= f.file_field :avatar %>
    </div>

    <br>
    <br>
    <div class="field">
      <%= f.label :email %><br />
        <br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "メールアドレスを入力" %>
    </div>
    <br>
    <div class="field">
      <%= f.label :password %>
        <br>
      <% if @minimum_password_length %>
        <br>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
        <br>
      <%= f.password_field :password, autocomplete: "new-password", :placeholder => "パスワードを入力" %>
    </div>
    <br>
    <div class="field">
      <%= f.label :password_confirmation %><br />
        <br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "パスワードを入力" %>
    </div>

    <br>
    <div class="actions">
      <%= f.submit "登録" %>
    </div>
  <% end %>

<br>
  <%= render "devise/shared/links" %>


</div>
