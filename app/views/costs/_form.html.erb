<%= form_with(model: @cost, local: true) do |form| %>

  <% if @cost.errors.any? %>
    <div id="error_explanation">
      <h4><%= @cost.errors.count %>件のエラーがあります。</h4>
      <ul>
      <% @cost.errors.full_messages.each do |msg| %>
        <ol><%= msg %></ol>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="cost_sale">
    <%= form.label :売り上げ %>
    <%= form.number_field :sale, :placeholder => "数値を入力" %>
  </div>
  <div class="cost_fertilizer">
    <%= form.label :肥料 %>
    <%= form.number_field :fertilizer, :placeholder => "数値を入力" %>
  </div>
  <div class="cost_soil">
    <%= form.label :土代 %>
    <%= form.number_field :soil, :placeholder => "数値を入力" %>
  </div>
  <div class="cost_seed">
    <%= form.label :苗・種 %>
    <%= form.number_field :seed, :placeholder => "数値を入力" %>
  </div>
  <%= form.submit %>
<% end %>
